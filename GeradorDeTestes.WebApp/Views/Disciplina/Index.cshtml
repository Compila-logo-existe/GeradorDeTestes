@model VisualizarDisciplinasViewModel

@{
	ViewBag.Titulo = "Visualização de Disciplinas";
}

<a class="btn btn-primary px-5" title="Nova Disciplina" asp-action="Cadastrar">
	<i class="bi bi-bookmark-plus-fill"></i>
	Nova Disciplina
</a>

<hr class="border border-dark opacity-25" />
<div class="row g-2">
	@if (!Model.Registros.Any())
	{
		<p class="fw-semibold mt-3">Ainda não há nenhuma disciplina cadastrada...</p>
	}
	else
	{
		@foreach (DetalhesDisciplinaViewModel disciplina in Model.Registros)
		{
			<div class="col-12 col-md-5 col-lg-4 col-xl-3 mb-3">
				<div class="card rounded-4 border-0">
					<div class="card-body">
						<div class="d-flex justify-content-between mb-4">
							<p class="card-text mb-1">
								<span class="fw-semibold">@disciplina.Id.ToString().Substring(0, 13)...</span>
							</p>
							<p class="card-text mb-1">
								<span class="fw-semibold">@disciplina.Nome</span>
							</p>
						</div>
						<span class="d-flex gap-1 justify-content-end">
							<a class="btn btn-primary rounded-circle" title="Detalhes Disciplina" asp-action="Detalhes" asp-route-id="@disciplina.Id">
								<i class="bi bi-eye"></i>
							</a>
							<a class="btn btn-primary rounded-circle" title="Editar Disciplina" asp-action="Editar" asp-route-id="@disciplina.Id" asp-route-contexto="Index">
								<i class="bi bi-pencil-square"></i>
							</a>
							<a class="btn btn-outline-danger rounded-circle" title="Excluir Disciplina" asp-action="Excluir" asp-route-id="@disciplina.Id">
								<i class="bi bi-bookmark-x-fill"></i>
							</a>
						</span>
					</div>
				</div>
			</div>
		}
	}
</div>
